@model IEnumerable<Model.EF.Menu>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<!-- BEGIN SAMPLE PORTLET CONFIGURATION MODAL FORM-->

   
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Quản lý Menu
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("Create")
                                           " id="sample_editable_1_new" class="btn green">
                                    Thêm mới

                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="btn-group pull-right">
                                <button class="btn dropdown-toggle" data-toggle="dropdown">
                                    Tools <i class="fa fa-angle-down"></i>
                                </button>
                                <ul class="dropdown-menu pull-right">
                                    <li>
                                        <a href="javascript:;">
                                            Print
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Save as PDF
                                        </a>
                                    </li>
                                    <li>
                                        <a href="javascript:;">
                                            Export to Excel
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div><table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>

                        <tr>
                           
                            <th>
                                Tên 
                            </th>
                            <th>
                               Đường dẫn
                            </th>
                            <th>
                               Thứ tự 
                            </th>
                            
                            <th>
                               Trạng thái

                            </th>
                            <th>


                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                               

                                <td>
                                    @Html.DisplayFor(modelItem => item.Text)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Link)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DisplayOrder)
                                </td>
                               
                                <td>
                                    @Html.DisplayFor(modelItem => item.Status)

                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Menus",new { id = item.ID })" class="btn btn-info">Sửa</a>
                                    <a href="@Url.Action("Delete","Menus",new { id = item.ID })" class="btn btn-danger">Xóa</a>

                                </td>

                            </tr>
                        }

                    </tbody>
                </table>


            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<!-- END PAGE CONTENT-->
