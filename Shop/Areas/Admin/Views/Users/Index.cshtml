@model IEnumerable<Model.EF.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>


<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet box grey-cascade">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Quản lý tài khoảng
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse">
                    </a>
                    <a href="#portlet-config" data-toggle="modal" class="config">
                    </a>
                    <a href="javascript:;" class="reload">
                    </a>
                    <a href="javascript:;" class="remove">
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("Create")
                                           " id="sample_editable_1_new" class="btn green">
                                    Thêm mới

                                    <i class="fa fa-plus"></i>
                                </a>
                            </div>
                        </div>
                    
                    </div>
                </div><table class="table table-striped table-bordered table-hover" id="sample_2">
                    <thead>

                        <tr>
                            <th>
                               Tên tài khoản
                            </th>
                           
                            <th>
                                Họ và tên
                            </th>
                            <th>
                               Email
                            </th>
                            <th>
                              Số điện thoại
                            </th>
                            <th>
                                Trạng thái
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="odd gradeX">
                                <td>
                                    @Html.DisplayFor(modelItem => item.UserName)
                                </td>
                              
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Phone)
                                </td>
                                <td>
                                   @item.Status
                                </td>
                                <td>
                                    <a href="@Url.Action("Edit","Users",new { id = item.ID })" class="btn btn-info">Sửa</a>
                                    <a href="@Url.Action("Detele","Users",new { id = item.ID })" class="btn btn-danger">Xóa</a>
                                </td>

                            </tr>
                        }

                    </tbody>
                </table>


            </div>
        </div>
        <!-- END EXAMPLE TABLE PORTLET-->
    </div>
</div>

<!-- END PAGE CONTENT-->
