@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Bootstrap File Upload </title>

    <link href="http://netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Scripts/uploads/css/fileinput.css" rel="stylesheet" />
    <script src="~/Scripts/uploads/jquery-2.2.3.min.js"></script>
    <script src="~/Scripts/uploads/js/fileinput.js"></script>
    <script src="http://netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js" type="text/javascript"></script>

</head>

<body>
    <input id="fileupload" type="file" name="files[]" multiple>

</body>

<script>
	    $("#fileupload").fileinput({
	        uploadUrl: '@Url.Action("UploadFiles")',
	      uploadAsync: false,
	      minFileCount: 1,
	      maxFileCount: 20,
	      showUpload: false,
	      showRemove: false,
	      initialPreview: [
	      ],
	      initialPreviewConfig: [
	      ]
	  })
</script>


</html>



